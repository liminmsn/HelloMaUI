<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloMaUI.Views.AboutPage"
             Title="AboutPage">
    <VerticalStackLayout Margin="10" Spacing="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="dotnet_bot.png" Aspect="AspectFit" SemanticProperties.Description="The dot net bot waving hello!" HeightRequest="64"/>
            <Label FontSize="22" FontAttributes="Bold" Text="Notes" VerticalOptions="End" />
            <Label FontSize="22" FontAttributes="Italic" Text="v1.0"/>
        </HorizontalStackLayout>
        <Label Text="This app is written in XAML and C# with .Net MAUI." />
        <Button Text="About Maui" Clicked="Button_Clicked"/>
    </VerticalStackLayout>
</ContentPage>